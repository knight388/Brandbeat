<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="159"
            android:paddingStart="28dp"
            android:paddingTop="40dp">

            <TextView
                android:id="@+id/rate_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.6"
                android:maxLength="3"
                android:textColor="@color/text_rate_background"
                android:textSize="59sp"
                />

            <RatingBar
                android:id="@+id/beat_rating"
                style="@style/beatRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="19dip"
                android:layout_below="@+id/rate_brand"
                android:layout_marginTop="5dip"
                android:numStars="1"
                android:stepSize="0.01"/>

            <TextView
                android:id="@+id/rate_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/beat_rating"
                android:layout_marginTop="10dp"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/review_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rate_count"
                android:layout_marginTop="10dp"
                android:text="586.564 Reviewed"
                android:textSize="14sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="200"
            android:paddingTop="20dp">

            <RelativeLayout
                android:id="@+id/five_stars_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/rate_image"
                    android:layout_width="wrap_content"
                    android:scaleX="-1"
                    android:layout_height="wrap_content"
                    android:src="@drawable/rate_level_5"/>

                <TextView
                    android:id="@+id/count_five"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    android:text="20000"
                    android:textColor="@color/simple_color"
                    android:textSize="14sp"/>

                <ProgressBar
                    android:id="@+id/seek_five"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="5dip"
                    android:layout_below="@+id/rate_image"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progressDrawable="@drawable/progress_drawable"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/four_stars_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/five_stars_layout"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/rate_image1"
                    android:layout_width="wrap_content"
                    android:scaleX="-1"
                    android:layout_height="wrap_content"
                    android:src="@drawable/rate_level_4"/>

                <TextView
                    android:id="@+id/count_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    android:text="20000"
                    android:textColor="@color/simple_color"
                    android:textSize="14sp"/>

                <ProgressBar
                    android:id="@+id/seek_four"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="5dip"
                    android:layout_below="@+id/rate_image1"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progressDrawable="@drawable/progress_drawable"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/three_starts_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/four_stars_layout"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/rate_image2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleX="-1"
                    android:src="@drawable/rate_level_3"/>

                <TextView
                    android:id="@+id/count_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    android:text="20000"
                    android:textColor="@color/simple_color"
                    android:textSize="14sp"/>

                <ProgressBar
                    android:id="@+id/seek_three"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="5dip"
                    android:layout_below="@+id/rate_image2"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progressDrawable="@drawable/progress_drawable"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/two_stars_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/three_starts_layout"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/rate_image3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleX="-1"
                    android:src="@drawable/rate_level_2"/>

                <TextView
                    android:id="@+id/count_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    android:text="20000"
                    android:textColor="@color/simple_color"
                    android:textSize="14sp"/>

                <ProgressBar
                    android:id="@+id/seek_two"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="5dip"
                    android:layout_below="@+id/rate_image3"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progressDrawable="@drawable/progress_drawable"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/one_stars_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/two_stars_layout"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/rate_image4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleX="-1"
                    android:src="@drawable/rate_level_1"/>

                <TextView
                    android:id="@+id/count_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    android:text="20000"
                    android:textColor="@color/simple_color"
                    android:textSize="14sp"/>

                <ProgressBar
                    android:id="@+id/seek_one"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="5dip"
                    android:layout_below="@+id/rate_image4"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progressDrawable="@drawable/progress_drawable"/>
            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_review"
        android:paddingBottom="10dp"
        android:layout_marginTop="20dp"
        android:paddingEnd="13dp"
        android:paddingStart="17dp"
        android:paddingTop="11dp"
        >

        <LinearLayout
            android:id="@+id/all_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/roundrect"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/all_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All (23)"
                android:textColor="@android:color/white"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/photo_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/all_layout"
            android:background="@drawable/round_rect"
            android:orientation="horizontal"
            android:padding="5dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="2dp"
                android:src="@drawable/image"/>
            <TextView
                android:id="@+id/photo_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="(23)"
                android:paddingStart="2dp"
                android:textColor="@color/text_color_menu"
                android:textSize="14sp"/>
        </LinearLayout>

  <!--      <LinearLayout
            android:id="@+id/text_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/photo_layout"
            android:background="@drawable/round_rect"
            android:orientation="horizontal"
            android:padding="5dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="2dp"
                android:src="@drawable/comment"/>
            <TextView
                android:id="@+id/comment_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:text="(23)"
                android:paddingStart="2dp"
                android:textColor="@color/text_color_menu"
                android:textSize="14sp"/>
        </LinearLayout>-->
        <LinearLayout
            android:id="@+id/one_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/photo_layout"
            android:background="@drawable/round_rect"
            android:layout_marginStart="12dp"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/r_1"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/two_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/one_layout"
            android:background="@drawable/round_rect"
            android:orientation="horizontal"
            android:padding="5dp">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/r_2"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/three_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/all_layout"
            android:layout_marginTop="12dp"
            android:background="@drawable/round_rect"
            android:orientation="horizontal"
            android:padding="5dp">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/r_3"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_rect"
            android:orientation="horizontal"
            android:id="@+id/four_layout"
            android:layout_below="@+id/all_layout"
            android:layout_toEndOf="@+id/three_layout"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:padding="5dp">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/r_4"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_rect"
            android:id="@+id/five_layout"
            android:layout_below="@+id/all_layout"
            android:layout_toEndOf="@+id/four_layout"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/r_5"/>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>