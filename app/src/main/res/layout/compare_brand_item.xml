<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/root_root_root"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="200dip"
                android:layout_height="260dip"
                android:layout_margin="10dip"
                android:orientation="vertical">

    <RelativeLayout android:id="@+id/brand_root"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="200dip"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

        <ImageView
            android:id="@+id/brand_image"
            android:layout_width="200dip"
            android:layout_height="200dip"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"/>

        <RelativeLayout
            android:layout_width="200dip"
            android:layout_height="34dip"
            android:background="@color/background_header_compare_item">

            <com.mgrmobi.brandbeat.ui.widget.RatingWidgetWithoutBackground
                android:id="@+id/rating_widjet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bottom_view"
            android:layout_width="200dip"
            android:layout_height="60dip"
            android:layout_below="@+id/brand_image"
            android:background="@color/background_bottom_brand_compare_view">

            <TextView
                android:id="@+id/name_brand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="22dip"
                android:layout_marginTop="12dip"
                android:text="PEPSI"
                android:textColor="@android:color/black"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/review_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dip"
                android:layout_marginTop="35dip"
                android:text="dfashklj dgfasklj dgaskj dgs"
                android:textColor="@android:color/black"
                android:textSize="12dp"
                />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>