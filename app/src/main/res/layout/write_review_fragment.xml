<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dip"
        android:layout_marginTop="17dip"
        android:text="@string/Write_a_Review"
        android:textStyle="bold"
        android:id="@+id/title"
        android:textColor="@android:color/black"
        android:textSize="25sp"/>

    <ImageView
        android:id="@+id/cancel_button"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:scaleType="center"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/right_dialog_margin"
        android:layout_marginTop="@dimen/top_dialog_margin"
        android:background="@drawable/standart_ripple"
        android:clickable="true"
        android:src="@drawable/delete"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginLeft="17dip"
        android:layout_marginRight="17dip"
        android:layout_marginTop="10dip"
        android:id="@+id/simple_title"
        android:text="@string/select_rating"
        android:textColor="@color/simple_color"
        android:textSize="16sp"/>


    <com.mgrmobi.brandbeat.ui.widget.RatingWidgetEditable
        android:id="@+id/rating_widjet"
        android:layout_below="@+id/simple_title"
        android:layout_marginStart="10dip"
        android:layout_marginTop="7dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="70dip"
        android:id="@+id/photo_view"
        android:layout_below="@+id/rating_widjet"
        android:padding="@dimen/standart_margin"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/photo_view"
        android:layout_marginLeft="17dip"
        android:layout_marginRight="17dip"
        android:layout_marginTop="10dip"
        android:id="@+id/simple_title_second"
        android:text="@string/Write_a_Review"
        android:textColor="@color/simple_color"
        android:textSize="16sp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/simple_title_second"
        android:layout_marginLeft="17dip"
        android:layout_marginRight="17dip"
        android:maxLines="3"
        android:layout_marginTop="10dip"
        android:id="@+id/review_text"/>
    <Button
        android:layout_width="110dip"
        android:layout_height="40dip"
        android:background="@drawable/text_button_drawable"
        android:layout_marginLeft="20.5dip"
        android:layout_marginRight="10.5dip"
        android:layout_marginTop="10dip"
        android:layout_below="@+id/review_text"
        android:textColor="@color/color_accent"
        android:textStyle="bold"
        android:textCursorDrawable="@drawable/cursor_write_review"
        android:id="@+id/complete"
        android:layout_marginBottom="10dip"
        android:text="@string/submit"
        android:layout_alignParentRight="true"
        android:layout_weight="108"/>
</RelativeLayout>