<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ToolBarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="selectableItemBackgroundBorderless">?android:selectableItemBackground</item>
        <item name="colorControlHighlight">@android:color/white</item>
        <item name="android:windowActionBarOverlay">true</item>

        <item name="actionMenuTextColor">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:colorControlNormal">@android:color/white</item>
    </style>

    <style name="LoginInputStyle">
        <item name="android:colorControlNormal">@android:color/white</item>
        <item name="android:colorControlActivated">@android:color/white</item>
        <item name="android:colorControlHighlight">@android:color/white</item>
        <item name="android:colorAccent">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
    </style>
    <style name="EditProfileInputStyle" parent="@android:style/TextAppearance">
        <item name="android:colorControlNormal">@color/text_color_menu</item>
        <item name="android:colorControlActivated">@color/text_color_menu</item>
        <item name="android:colorControlHighlight">@color/text_color_menu</item>
        <item name="android:colorAccent">@android:color/white</item>
        <item name="android:textColorHint">@color/text_color_menu</item>
        <item name="android:textColor">@color/color_accent</item>
    </style>

    <style name="EditTextLoginStyle">

        <item name="android:backgroundTint">@color/text_color_menu</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@color/text_color_menu</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="EditTextEditProfileStyle">
        <item name="android:backgroundTint">@color/text_color_menu</item>
        <item name="android:textColor">@color/text_color_menu</item>
        <item name="android:textColorHint">@color/text_color_menu</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
    </style>

</resources>